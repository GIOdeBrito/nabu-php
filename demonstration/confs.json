{
	"title": "NabuPHP Configuration File",
	"description": "This is a NabuPHP application general configuration file.",
	"version": "1.0.0",
	"properties": {
		"routes-folder": "$HOME/Routes",
		"layouts-folder": "$ABSPATH/src/Template",
		"notfound-redirect": "/public/not-found",
		"onerror-redirect": "/public/error"
	},
	"constants": {
		"ABSPATH": "/var/www/html",
		"HOME": "/var/www/html/public",
		"VIEWS_PATH": "/var/www/html/public/Views"
	},
	"author": "Giordano de Brito"
}